{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "./dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.spec.tsx",
    "node_modules",
    "dist"
  ]
}
