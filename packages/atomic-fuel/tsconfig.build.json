{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx"
  ],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "./libs",
    "declaration": true
  }
}
